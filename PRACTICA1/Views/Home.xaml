             x:Class="PRACTICA1.Views.Home">

    <StackLayout>
        <Label Text="Bienvenido" 
                HorizontalOptions="Center"
                TextColor="Aqua" 
                FontAttributes="Bold"     
               />
        <Frame CornerRadius="30">
            <StackLayout>
                <Image Source="https://upao.info/biblioteca/img/biblioteca-07%20(1).png" />
                <Label Text="Usuario" />
                <Entry PlaceholderColor="Black" Placeholder="Ingrese su usuario"/>
                <Entry PlaceholderColor="Black" Placeholder="Ingrese su contraseña"/>
                <Button x:Name="Guardar" Clicked="Guardar_Clicked" Text="Guardar" CornerRadius="20" BackgroundColor="Red" />
            </StackLayout>
        </Frame>
    </StackLayout>
    
